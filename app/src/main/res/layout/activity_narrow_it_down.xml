<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NarrowItDown"
    tools:layout_editor_absoluteY="81dp">

    <CheckBox
        android:id="@+id/checkChinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Chinese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/checkItalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Italian"
        app:layout_constraintBottom_toTopOf="@+id/checkFrench"
        app:layout_constraintStart_toStartOf="@+id/checkFrench" />

    <CheckBox
        android:id="@+id/checkMexician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mexican"
        app:layout_constraintStart_toStartOf="@+id/checkChinese"
        app:layout_constraintTop_toBottomOf="@+id/checkChinese" />

    <CheckBox
        android:id="@+id/checkFrench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="French"
        app:layout_constraintBottom_toTopOf="@+id/chackAmerican"
        app:layout_constraintStart_toStartOf="@+id/chackAmerican" />

    <CheckBox
        android:id="@+id/checkIndian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Indian"
        app:layout_constraintStart_toStartOf="@+id/checkMexician"
        app:layout_constraintTop_toBottomOf="@+id/checkMexician" />

    <CheckBox
        android:id="@+id/chackAmerican"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="American"
        app:layout_constraintBottom_toBottomOf="@+id/checkIndian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkIndian" />

    <CheckBox
        android:id="@+id/checkJapanese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        android:text="Japanese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIndian" />

    <CheckBox
        android:id="@+id/checkThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Thai"
        app:layout_constraintStart_toStartOf="@+id/chackAmerican"
        app:layout_constraintTop_toBottomOf="@+id/chackAmerican" />

    <SeekBar
        android:id="@+id/milesBar"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginBottom="117dp"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="117dp"
        android:max="30"
        android:text="Distance"
        app:layout_constraintBottom_toBottomOf="@+id/checkAny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkJapanese" />

    <TextView
        android:id="@+id/miles"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="163dp"
        android:layout_marginTop="163dp"
        android:text="0mi"
        app:layout_constraintBottom_toTopOf="@+id/applyfilterbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chackAmerican" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Distance"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/milesBar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:text="Cuisine"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="175dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Price"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkCheap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Cheapest"
        app:layout_constraintStart_toStartOf="@+id/checkAny"
        app:layout_constraintTop_toBottomOf="@+id/checkAny" />

    <CheckBox
        android:id="@+id/checkMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="Medium"
        app:layout_constraintBottom_toBottomOf="@+id/checkAny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkAny" />

    <CheckBox
        android:id="@+id/checkHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Highest"
        app:layout_constraintStart_toStartOf="@+id/checkMedium"
        app:layout_constraintTop_toBottomOf="@+id/checkMedium" />

    <Button
        android:id="@+id/applyfilterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@drawable/roundbutton"
        android:gravity="center"
        android:padding="10sp"
        android:text="Apply Filters"
        android:textColor="#fffafa"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkHigh" />

    <CheckBox
        android:id="@+id/checkAny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Any"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</android.support.constraint.ConstraintLayout>